{{define "content"}}
<div class="mt-4">
  <h1 class="h4 mb-4 text-center">服务器列表</h1>

  <!-- 按钮用于添加新 target -->
  <div class="text-end mb-3">
    <button
      type="button"
      class="btn btn-success"
      data-bs-toggle="modal"
      data-bs-target="#targetModal"
      data-action="create"
    >
      添加新的服务器
    </button>
  </div>

  <!-- 显示所有 target -->
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">名称</th>
        <th scope="col">Host</th>
        <th scope="col">Port</th>
        <th scope="col">User</th>
        <th scope="col">操作</th>
      </tr>
    </thead>
    <tbody>
      {{ range.targets }}
      <tr>
        <td>{{.Name}}</td>
        <td>{{.Host}}</td>
        <td>{{.Port}}</td>
        <td>{{.User}}</td>
        <td>
          <!-- Update button (Modal trigger) -->
          <button
            type="button"
            class="btn btn-primary btn-text btn-sm"
            data-bs-toggle="modal"
            data-bs-target="#targetModal"
            data-action="update"
            data-id="{{.ID}}"
            data-name="{{.Name}}"
            data-host="{{.Host}}"
            data-port="{{.Port}}"
            data-user="{{.User}}"
          >
            更改
          </button>

          <!-- Delete button (Modal trigger) -->
          <button
            type="button"
            class="btn btn-danger btn-sm"
            data-bs-toggle="modal"
            data-bs-target="#deleteTargetModal"
            data-id="{{.ID}}"
            data-name="{{.Name}}"
          >
            删除
          </button>
        </td>
      </tr>
      {{else}}
      <tr>
        <td colspan="5" class="text-center">没有服务器记录</td>
      </tr>
      {{ end }}
    </tbody>
  </table>
</div>

<!-- 添加/更改服务器的模态框 -->
<div class="modal fade" id="targetModal" tabindex="-1" aria-labelledby="targetModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="targetModalLabel">添加服务器</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="targetForm" method="POST">
          <div class="mb-3">
            <label for="targetName" class="form-label">名称</label>
            <input type="text" class="form-control" id="targetName" name="name" required />
          </div>
          <div class="mb-3">
            <label for="targetHost" class="form-label">Host</label>
            <input type="text" class="form-control" id="targetHost" name="host" required />
          </div>
          <div class="mb-3">
            <label for="targetPort" class="form-label">Port</label>
            <input type="number" class="form-control" id="targetPort" name="port" required />
          </div>
          <div class="mb-3">
            <label for="targetUser" class="form-label">User</label>
            <input type="text" class="form-control" id="targetUser" name="user" required />
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
            <button type="submit" class="btn btn-primary">提交</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- 删除服务器的模态框 -->
<div
  class="modal fade"
  id="deleteTargetModal"
  tabindex="-1"
  aria-labelledby="deleteTargetModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteTargetModalLabel">删除服务器</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>
          你确定要删除
          <strong id="deleteTargetName"></strong>
          吗？
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
        <form id="deleteForm" method="POST" class="d-inline">
          <button type="submit" class="btn btn-danger">删除</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  // 当 targetModal 显示时，动态调整内容
  var targetModal = document.getElementById('targetModal');
  targetModal.addEventListener('show.bs.modal', function (event) {
    var button = event.relatedTarget;
    var action = button.getAttribute('data-action'); // 检查是创建还是更新

    var modalTitle = targetModal.querySelector('.modal-title');
    var targetForm = document.getElementById('targetForm');

    if (action === 'create') {
      modalTitle.textContent = '添加服务器';
      targetForm.action = '/target';
      // 清空表单
      document.getElementById('targetName').value = '';
      document.getElementById('targetHost').value = '';
      document.getElementById('targetPort').value = '';
      document.getElementById('targetUser').value = '';
    } else if (action === 'update') {
      var id = button.getAttribute('data-id');
      var name = button.getAttribute('data-name');
      var host = button.getAttribute('data-host');
      var port = button.getAttribute('data-port');
      var user = button.getAttribute('data-user');

      modalTitle.textContent = '更改服务器';
      targetForm.action = '/target/update/' + id;
      // 预填充表单
      document.getElementById('targetName').value = name;
      document.getElementById('targetHost').value = host;
      document.getElementById('targetPort').value = port;
      document.getElementById('targetUser').value = user;
    }
  });

  // 当 deleteTargetModal 显示时，设置表单 action 和显示要删除的服务器名称
  var deleteTargetModal = document.getElementById('deleteTargetModal');
  deleteTargetModal.addEventListener('show.bs.modal', function (event) {
    var button = event.relatedTarget;
    var id = button.getAttribute('data-id');
    var name = button.getAttribute('data-name');

    var deleteForm = document.getElementById('deleteForm');
    deleteForm.action = '/target/delete/' + id;

    document.getElementById('deleteTargetName').textContent = name;
  });
</script>
{{ end }}
